<h1><%= @snack.name %></h1>
<h3>$<%= @snack.price %></h3>
<section>
  <p>Locations:</p>
  <ul>
    <% @snack.machines.each do |machine| %>
    <li><%= machine.location %> (<%= machine.snacks.length %> kinds of snacks, average price of $<%= machine.average_snack_price.to_f.round(2) %>)</li>
    <% end %>
  </ul>
</section>
